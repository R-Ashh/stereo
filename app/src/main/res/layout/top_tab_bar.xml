<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/transparent">

        <LinearLayout
            android:id="@+id/topBarLeftLinear"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start">

            <ImageView
                android:id="@+id/topBarLeftImage"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:contentDescription="TopLeft" />

        </LinearLayout>


        <TextView
            android:id="@+id/topBarMidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="14dp"
            android:textColor="@color/whiteGrey"/>

        <LinearLayout
            android:id="@+id/topBarRightLinear"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end">
            <ImageView
                android:id="@+id/topBarRightImage"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:contentDescription="TopRight" />
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
